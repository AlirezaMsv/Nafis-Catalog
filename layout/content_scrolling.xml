<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">
<!--    all of the scrolling activity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background1"
        android:padding="10dp"
        android:orientation="vertical">

    <!--        android:weightSum="12">-->
<!--        img-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:id="@+id/img"
            android:src="@drawable/img1"></ImageView>
<!--        brands-->
        <TextView
            android:text="@string/brands"
            style="@style/txt1style"></TextView>
<!--        brands:::-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="3">
<!--            each line (1)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:onClick="brandvoid"
                    android:id="@+id/amuzesh"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backshape"
                    android:src="@drawable/amouzesh"
                    android:layout_marginLeft="10dp"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:onClick="brandvoid"
                    android:id="@+id/aromatic"
                    android:layout_height="match_parent"
                    android:background="@drawable/backshape"
                    android:layout_weight="1"
                    android:src="@drawable/aromatic"
                    android:layout_marginLeft="10dp"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:onClick="brandvoid"
                    android:layout_height="match_parent"
                    android:id="@+id/blackberry"
                    android:background="@drawable/backshape"
                    android:layout_weight="1"
                    android:src="@drawable/blackberry"
                    android:layout_marginLeft="10dp"></ImageView>
            </LinearLayout>
<!--            line 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/ellen"
                    android:layout_weight="1"
                    android:onClick="brandvoid"
                    android:background="@drawable/backshape"
                    android:src="@drawable/ellen_beauty"
                    android:layout_marginLeft="10dp"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/mnd"
                    android:onClick="brandvoid"
                    android:layout_height="match_parent"
                    android:background="@drawable/backshape"
                    android:layout_weight="1"
                    android:src="@drawable/mnd"
                    android:layout_marginLeft="10dp"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/moralup"
                    android:onClick="brandvoid"
                    android:layout_height="match_parent"
                    android:background="@drawable/backshape"
                    android:layout_weight="1"
                    android:src="@drawable/moralup"
                    android:layout_marginLeft="10dp"></ImageView>
            </LinearLayout>
<!--            line 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/backshape"
                    android:visibility="invisible"
                    android:src="@drawable/amouzesh"
                    android:layout_marginLeft="10dp"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/superstar"
                    android:onClick="brandvoid"
                    android:background="@drawable/backshape"
                    android:layout_weight="1"
                    android:src="@drawable/superstar"
                    android:layout_marginLeft="10dp"></ImageView>
            </LinearLayout>
        </LinearLayout>
<!--        kinds-->
        <TextView
            android:text="@string/kinds"
            style="@style/txt1style"></TextView>
<!--        kinds:::-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical"
            android:weightSum="2"
            >
<!--            each line (1)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/backshape2"
                    android:id="@+id/hair"
                    android:onClick="kindvoid"
                    android:layout_weight="1"
                    android:src="@drawable/hair"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:id="@+id/kodak"
                    android:onClick="kindvoid"
                    android:layout_height="match_parent"
                    android:background="@drawable/backshape2"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/kodak"></ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/body"
                    android:padding="10dp"
                    android:onClick="kindvoid"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/backshape2"
                    android:layout_weight="1"
                    android:src="@drawable/behdasht"></ImageView>
                <ImageView
                    android:layout_width="0dp"
                    android:background="@drawable/backshape2"
                    android:padding="10dp"
                    android:id="@+id/arayesh"
                    android:onClick="kindvoid"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/arayaesh"></ImageView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>